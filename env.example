# Policy Simulator - Environment Variables
# Copy this file to .env and update with your actual values

# ============================================================================
# Application Configuration
# ============================================================================
ENVIRONMENT=development
DEBUG=true
APP_NAME=Policy Simulator
VERSION=1.0.0

# ============================================================================
# Server Configuration
# ============================================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8005
# Note: Railway sets PORT automatically, but you can override with BACKEND_PORT

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=sqlite:///./data/health_indicators.db

# ============================================================================
# AI Integration
# ============================================================================
# OpenAI API Key (required for narrative generation)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic Claude API (optional, alternative to OpenAI)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ============================================================================
# External Data Sources (Optional)
# ============================================================================
WHO_DATA_API_KEY=your_who_api_key_here

# ============================================================================
# Security
# ============================================================================
# IMPORTANT: Change these in production!
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production

# CORS Origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8005

# Allowed Hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# Monitoring & Logging
# ============================================================================
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# ============================================================================
# Performance & Rate Limiting
# ============================================================================
CACHE_TTL=3600
MAX_SIMULATIONS_PER_HOUR=1000
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# Data Quality Settings
# ============================================================================
MIN_DATA_QUALITY_SCORE=90.0
MAX_SIMULATION_RESPONSE_TIME=5

# ============================================================================
# Cost Management
# ============================================================================
MAX_COST_PER_SIMULATION=0.10

# ============================================================================
# Frontend Configuration (for Vercel)
# ============================================================================
# Set this in Vercel dashboard, not in .env file
# VITE_API_BASE_URL=https://your-railway-backend-url.railway.app
