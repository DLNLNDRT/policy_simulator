# Environment Configuration for Policy Simulation Assistant

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_DEBUG=true

# Database Configuration
DATABASE_URL=sqlite:///./data/health_indicators.db
# For PostgreSQL: postgresql://user:password@localhost:5432/health_indicators

# AI Integration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Data Sources
WHO_DATA_API_KEY=your_who_api_key_here
WORLD_BANK_API_KEY=your_world_bank_api_key_here

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# Performance
CACHE_TTL=3600
MAX_SIMULATIONS_PER_HOUR=1000
RATE_LIMIT_PER_MINUTE=60

# Development
ENVIRONMENT=development
DEBUG=true
